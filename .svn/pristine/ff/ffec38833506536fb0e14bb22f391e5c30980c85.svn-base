    NSString *title = [webView stringByEvaluatingJavaScriptFromString:@"document.title"];
    [_manager stopMonitoring];
    //    [_label removeFromSuperview];
    if ([self.webView canGoBack])
    {
        if (![title isEqualToString:@"速勘课堂"])
        {
        [self customPushViewControllerNavBarTitle:title backGroundImageName:nil];
        self.tabBarController.tabBar.hidden = YES;
            self.webView.frame = CGRectMake(0, 0, Screen_W, Screen_H-64);

        }
    }else
    {
        [self hiddenLeftButton];
        self.webView.frame = CGRectMake(0, 0, Screen_W, Screen_H-64-49);
        self.tabBarController.tabBar.hidden = NO;
        
        
        if (title.length == 0) {
            self.naviTitle = @"速勘课堂";
        }else if([title isEqualToString:@"速勘课堂"]){
            self.naviTitle = @"速勘课堂";
        }
    }
}


